{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
	  "modern",
	  "templates/my-template"
    ],
    "globalMetadata": {
      "_appName": "SkyRoof",
      "_appTitle": "SkyRoof",
      "_enableSearch": true,
	  "pdfFileName": "skyroof_users_guide.pdf",
	  "pdfTocPage": true,
	  "pdfCoverPage": "users_guide/pdf_cover.html"
    },
  }
}